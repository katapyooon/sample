    "version": "0.2.0",
    "configurations": [


        {
            "type": "rdbg",
            "name": "Debug current file with rdbg",
            "request": "launch",
            "cwd": "${workspaceRoot}/bin/rails",
            "script": "bin/rails server",
            "args": [
                "server"
            ],
            "askParameters": false,
            "useBundler": true
        },
        {
            "type": "rdbg",
            "name": "Attach with rdbg",
            "request": "attach"
        }
    ]
}